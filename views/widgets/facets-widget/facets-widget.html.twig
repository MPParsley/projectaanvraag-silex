<section class="cnw_facetedsearch--wrapper cnw_row">

    <!--  Faceted search - type -->
    {% if settings_filters.what %}
        <div class="cnw_facetedsearch cnw_facetedsearch--type cnw_col">

            <h3 class="cnw_block-title">Type</h3>

            <ul class="cnw_facet-search" data-size="6">
                {% for facet in facets.types %}
                    <li class="cnw_facet-label ">
                        <a href="#">{{ facet.name }}</a>
                        <small class="cnw_facet-count cnw_push-right">({{ facet.count }})</small>
                    </li>
                {% endfor %}
            </ul>

        </div>
    {% endif %}
    <!--  Faceted search - type -->

    <!--  Faceted search - Location -->
    {% if settings_filters.where %}
        <div class="cnw_facetedsearch cnw_facetedsearch--location cnw_col">

            <h3 class="cnw_block-title">Waar</h3>

            <ul class="cnw_facet-search cnw_faceted--where" data-size="6">
                {% for facet in facets.regions %}
                    <li class="cnw_facet-label ">
                        <a href="#" onclick="CultuurnetWidgets.facetRegionFilter('{{ facet.value }}')">{{ facet.name }}</a>
                        <small class="cnw_facet-count cnw_push-right">({{ facet.count }})</small>
                    </li>
                {% endfor %}
            </ul>
            <div class="cnw_row cnw_faceted--distance">
                <div class="cnw_col-5 form-group" >
                    <select class="cnw_form-control custom_select" >
                        <option>+ 20 km</option>
                        <option>+ 40 km</option>
                        <option>+ 60 km</option>
                    </select>
                </div>
                <div class="cnw_col-7 cnw_faceted--distance-button-holder">
                    <button class="cnw_btn-link cnw_btn cnw_btn-block cnw_form-submit" name="op" value="Wijzig straal"
                            type="submit">Wijzig straal
                    </button>
                </div>
            </div>
            <div class="cnw_row cnw_faceted--choose-location">
                <div class="cnw_col">
                    <a data-toggle="collapse" href="#">Kies andere plaats <i class="fa"></i></a>
                </div>
            </div>
            <div class="cnw_row cnw_faceted--postalcode">
                <div class="cnw_col">
                    <form class="cnw_form-inline">
                        <div class="cnw_input-group">
                            <input type="text" class="cnw_form-control" id="searchPostcode" placeholder="Postcode of gemeente">
                            <span class="cnw_input-group-btn">
                                <button class="cnw_btn cnw_btn-secondary" type="button">Ok</button>
                            </span>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    {% endif %}
    <!--  Faceted search -   location -->

    <!--  Faceted search - Date -->
    {% if settings_filters.when %}
        <div class="cnw_facetedsearch cnw_facetedsearch--date cnw_col">

            <h3 class="cnw_block-title">Wanneer</h3>

            <ul class="cnw_facet-search" data-size="6">
                <li class="cnw_facet-label">
                    <a href="#" onclick="CultuurnetWidgets.facetDateFilter('today')">Vandaag</a>
                </li>
                <li class="cnw_facet-label">
                    <a href="#" onclick="CultuurnetWidgets.facetDateFilter('tomorrow')">Morgen</a>
                </li>

                <li class="cnw_facet-label">
                    <a href="#" onclick="CultuurnetWidgets.facetDateFilter('thisweekend')">Dit weekend</a>
                </li>

                <li class="cnw_facet-label">
                    <a href="#" onclick="CultuurnetWidgets.facetDateFilter('next7days')">Volgende 7 dagen</a>
                </li>

                <li class="cnw_facet-label">
                    <a href="#" onclick="CultuurnetWidgets.facetDateFilter('next14days')">Volgende 14 dagen</a>
                </li>

                <li class="cnw_facet-label">
                    <a href="#" onclick="CultuurnetWidgets.facetDateFilter('next30days')">Volgende 30 dagen</a>
                </li>
            </ul>
        </div>
    {% endif %}
    <!--  Faceted search -   Date -->

    <!--  Faceted search - extra -->
    {% if settings_group_filters.enabled %}

        {% for group in settings_group_filters.filters  %}
        <div class="cnw_facetedsearch cnw_facetedsearch--extra cnw_col">
            <h3 class="cnw_block-title">{{ group.label }}</h3>

            <ul class="cnw_facet-search" data-size="6">
                {% for option in group.options %}
                    <li class="cnw_facet-label ">
                        <a href="#">{{ option.label }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
        {% endfor %}

    {% endif %}
<!--  Faceted search -   extra -->
</section>