<div class="cnw_w">
    <div class="cnw_container">
        <div id="loadcontent">
            <!--  Faceted search - Date -->
            {% if settings_filters.when %}
                <section class="cnw_facetedsearch cnw_facetedsearch--date">

                    <!-- TODO: needs to be built from facet? -->
                    <h3 class="cnw_block-title">Wanneer</h3>

                    <ul class="cnw_facet-search" data-size="6">
                        <li class="cnw_facet-label">
                            <a href="#" onclick="CultuurnetWidgets.facetFilter('facet-date', 'today')">Vandaag</a>
                        </li>
                        <li class="cnw_facet-label">
                            <a href="#" onclick="CultuurnetWidgets.facetFilter('facet-date', 'tomorrow')">Morgen</a>
                        </li>

                        <li class="cnw_facet-label">
                            <a href="#" onclick="CultuurnetWidgets.facetFilter('facet-date', 'thisweekend')">Dit weekend</a>
                        </li>

                        <li class="cnw_facet-label">
                            <a href="#" onclick="CultuurnetWidgets.facetFilter('facet-date', 'next7days')">Volgende 7 dagen</a>
                        </li>

                        <li class="cnw_facet-label">
                            <a href="#" onclick="CultuurnetWidgets.facetFilter('facet-date', 'next14days')">Volgende 14 dagen</a>
                        </li>

                        <li class="cnw_facet-label">
                            <a href="#" onclick="CultuurnetWidgets.facetFilter('facet-date', 'next30days')">Volgende 30 dagen</a>
                        </li>
                    </ul>

                </section>
            {% endif %}
            <!--  Faceted search -   Date -->

            <!--  Faceted search - Location -->
            {% if settings_filters.where %}
                <section class="cnw_facetedsearch cnw_facetedsearch--location">

                    <h3 class="cnw_block-title">Waar</h3>

                    <ul class="cnw_facet-search" data-size="6">
                        {% for facet in facets.regions %}
                            <li class="cnw_facet-label ">
                                <a href="#" onclick="CultuurnetWidgets.facetFilter('facet-region', '{{ facet.value }}')">{{ facet.name }}</a>
                                <small class="cnw_facet-count cnw_push-right">({{ facet.count }})</small>
                            </li>
                        {% endfor %}
                    </ul>
                    <div class="cnw_row">
                        <div class="cnw_col">
                            <form class="cnw_form-inline">
                                <div class="cnw_form-group">

                                    <input type="text" id="searchPostcode" class="cnw_form-control"
                                           placeholder="Postcode of gemeente">
                                </div>
                                <button type="submit" class="cnw_btn cnw_btn-primary">Ok</button>
                            </form>
                        </div>
                    </div>

                </section>
            {% endif %}
            <!--  Faceted search -   location -->

            <!--  Faceted search - type -->
            {% if settings_filters.what %}
                <section class="cnw_facetedsearch cnw_facetedsearch--type">

                    <h3 class="cnw_block-title">Type</h3>

                    <ul class="cnw_facet-search" data-size="6">
                        {% for facet in facets.types %}
                            <li class="cnw_facet-label ">
                                <a href="#" onclick="CultuurnetWidgets.facetFilter('facet-type', '{{ facet.value }}')">{{ facet.name }}</a>
                                <small class="cnw_facet-count cnw_push-right">({{ facet.count }})</small>
                            </li>
                        {% endfor %}
                    </ul>

                </section>
            {% endif %}
            <!--  Faceted search - type -->

            <!--  Faceted search - extra -->
            {% if settings_group_filters.enabled %}

                {% for group in settings_group_filters.filters  %}
                <section class="cnw_facetedsearch cnw_facetedsearch--extra">
                    <h3 class="cnw_block-title">{{ group.label }}</h3>

                    <ul class="cnw_facet-search" data-size="6">
                        {% for option in group.options %}
                            <li class="cnw_facet-label ">
                                <a href="#" onclick="CultuurnetWidgets.extraFilter('{{ option.query }}')">{{ option.label }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </section>
                {% endfor %}

            {% endif %}
            <!--  Faceted search -   extra -->
        </div>
    </div>
</div>