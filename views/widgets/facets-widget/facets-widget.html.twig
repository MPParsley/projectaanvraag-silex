<div class="cnw_w cnw_facets" data-widget-id="{{ id }}">

    <a class="cnw_facets_toggle cnw_facets_toggle--open" href="#">{{ 'facets_toggle' | trans({}, 'messages', preferredLanguage) }}</a>

    <div class="cnw_facets_content">
        {% for facet in facets %}
            {% if facet.count > 0 %}
                {% include 'widgets/facets-widget/facet.html.twig' with { 'facet': facet } %}
            {% endif %}
        {% endfor %}
    </div>

</div>