<div class="cnw_w">
    <div class="cnw_container-fluid">

        <div class="cnw_row">
            {% if settings_header.body %}
                <div class="cnw_searchresult_header">
                    {{ settings_header.body | raw }}
                </div>
            {% endif %}

            <!--  facetedSearch  START -->
            <div class="cnw_searchresult__facetedSearch">
                <!--  je zocht op  START -->
                <div class="cnw_searchresult__selectedSearchFilters cnw_container-fluid">
                    <p>Je zocht op :
                        <button type="button" class="cnw_close cnw_btn--zoekresult" aria-label="Close">
                            Zoekresult1
                            <span aria-hidden="true">&times;</span>
                        </button>

                        <button type="button" class="cnw_close cnw_btn--zoekresult" aria-label="Close">
                            Zoekresult2
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </p>
                </div>


                <!-- ZoekOpties  START -->
                <form>
                    <div class="cnw_searchresult__options cnw_container-fluid">
                        <div class="cnw_row">
                            <div class="cnw_col">
                                <div class="cnw_form-check ">
                                    <label class="cnw_form-check-label">
                                        <input type="checkbox" class="cnw_form-check-input">
                                        Verberg langlopende reeksen
                                    </label>
                                </div>
                            </div>
                            <div class="cnw_col">
                                <div class="cnw_form-check ">
                                    <label class="cnw_form-check-label">
                                        <input type="checkbox" class="cnw_form-check-input">
                                        Verberg permanente bezienswaardigheden
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <!-- ZoekOpties  END -->

                <!--  facetedSearch  END -->

                <!--  searchWords  START -->
                <div class="cnw_searchresult__searchwords">
                    <p>Je zocht op <span class="cnw_searchresult__searchword">Zoekwoord</span></p>
                </div>
                <!--  searchWords END -->

                <!--  counter  START -->
                <div class="cnw_searchresult__counter">
                    <p><span class="cnw_searchresult__counter-total">{{ result_count }}</span> resultaten gevonden</p>
                </div>
                <!--  counter END -->

                {% for event in events %}
                    <!--  results - CARD  START -->
                    <div class="cnw_searchresult--block cnw_row ">

                        <div class="cnw_col-4">
                            {% if settings_items.image.enabled %}
                                <div class="cnw_col-12">
                                    <img src="{{ event.image }}" class="cnw_img_responsive {{ settings_items.image.position }}">
                                </div>
                            {% endif %}
                        </div>

                        <div class="cnw_col-8">
                            <div class="card-block ">
                                <h3 class="cnw_card-title">{{ event.name }}</h3>
                                <span class="cnw_stickers ">
                                {% if settings_items.icon_vlieg.enabled %}
                                    <span class="cnw_sticker cnw_sticker--vlieg">
                                        <span class="cnw_txt">7+</span>
                                    </span>
                                {% endif %}
                            </span>
                                {% if settings_items.description.enabled %}
                                    <p class="cnw_card-description">{{ event.description }}</p>
                                {% endif %}
                                <dl class="cnw_row">
                                    {% if settings_items.where.enabled %}
                                        <dt class="cnw_col-3">{{ settings_items.where.label }}</dt>
                                        <dd class="cnw_col-9">{{ event.where }}</dd>
                                    {% endif %}

                                    {% if event.organizer %}
                                        <dt class="cnw_col-3">Organisatie</dt>
                                        <dd class="cnw_col-9">{{ event.organizer }}</dd>
                                    {% endif %}

                                    {% if settings_items.when.enabled %}
                                        <dt class="cnw_col-3">{{ settings_items.when.label }}</dt>
                                        <dd class="cnw_col-9">{{ event.when_start }}</dd>
                                    {% endif %}

                                    {% if settings_items.age.enabled and event.age_range %}
                                        <dt class="cnw_col-3">{{ settings_items.age.label }}</dt>
                                        <dd class="cnw_col-9">{{ event.age_range }}</dd>
                                    {% endif %}

                                    {% if settings_items.language_icons.enabled %}
                                        <dt class="cnw_col-3">Taal</dt>
                                        <dd class="cnw_col-9">Nl - Fr - De</dd>
                                    {% endif %}

                                    {% if event.themes %}
                                        <dt class="cnw_col-3">Thema</dt>
                                        <dd class="cnw_col-9">
                                            {% for theme in event.themes %}
                                                <a href="" class="cnw_link__card-thema">{{ theme.getLabel }}</a>
                                            {% endfor %}
                                        </dd>
                                    {% endif %}
                                </dl>
                                {% if settings_items.read_more.enabled %}
                                    <a href="#" class="cnw_btn cnw_btn__card-readmore">{{ settings_items.read_more.label }}</a>
                                {% endif %}

                            </div>
                        </div>
                    </div>
                    <!--  results - CARD  END -->
                {% endfor %}

                <!--  PAGINATION Start -->
                {% if pager and pager.pageCount > 1 %}
                <nav aria-label="Page navigation example">
                    <ul class="cnw_pagination cnw_justify-content-center">

                        {% if pager.activePageIndex != 0 %}
                            <li class="cnw_page-item ">
                                <a class="cnw_page-link" href="#" tabindex="-1" onclick="CultuurnetWidgets.switchPage(0)">Eerste</a>
                            </li>
                            <li class="cnw_page-item">
                                <a class="cnw_page-link" href="#" tabindex="-1" onclick="CultuurnetWidgets.switchPage({{ pager.activePageIndex - 1 }})">Vorige</a>
                            </li>
                        {% endif %}

                        {% if pager.getLowestVisible != 1 %}
                            <li class="pager-ellipsis disabled"><span>…</span></li>
                        {% endif %}

                        {% for i in pager.getLowestVisible..pager.getHighestVisible %}
                            <li class="cnw_page-item {% if i == pager.activePageIndex + 1 %}cnw_disabled{% endif %}">
                                <a class="cnw_page-link" href="#" onclick="CultuurnetWidgets.switchPage({{ i-1 }})">{{ i }}</a>
                            </li>
                        {% endfor %}

                        {% if pager.getHighestVisible != pager.pageCount %}
                            <li class="pager-ellipsis disabled"><span>…</span></li>
                        {% endif %}

                        {% if pager.activePageIndex != pager.pageCount-1 %}
                            <li class="cnw_page-item">
                                <a class="cnw_page-link" href="#" onclick="CultuurnetWidgets.switchPage({{ pager.activePageIndex + 1 }})">Volgende</a>
                            </li>
                            <li class="cnw_page-item">
                                <a class="cnw_page-link" href="#" onclick="CultuurnetWidgets.switchPage({{ pager.pageCount - 1 }})">Laatste</a>
                            </li>
                        {% endif %}
                    </ul>
                </nav>
                {% endif %}
                <!--  PAGINATION END-->

            </div>
        </div>
    </div>
</div>
