{% if settings_header.body %}
    <div class="cnw_form_header">
        {{ settings_header.body | raw }}
    </div>
{% endif %}

<form class="cnw_form cnw_form--extended">
    <div class="cnw_row">

        {% if settings_fields.type.keyword_search.enabled or settings_fields.type.group_filters.enabled %}
            <div class="cnw_col">
                {% if settings_fields.type.keyword_search.enabled %}
                    <div class="cnw_form-group cnw_zoek-wat">
                        <label for="cnw_zoek-wat">
                            {{  settings_fields.type.keyword_search.label }}
                        </label>
                        <input type="text" class="cnw_form-control" placeholder="{{  settings_fields.type.keyword_search.placeholder }}">
                    </div>
                {% endif %}

                {% if settings_fields.type.group_filters.enabled %}
                    {% for key, filter in  settings_fields.type.group_filters.filters %}
                        {% include 'widgets/search-form-widget/group-filter-' ~ filter.type ~  '.html.twig' with {'label':filter.label, 'placeholder':filter.placeholder, 'options':filter.options, 'default_option': defaults.type.group_filters[key]} %}
                    {% endfor %}
                {% endif %}
            </div>
        {% endif %}

        {% if settings_fields.location.keyword_search.enabled or settings_fields.location.group_filters.enabled %}
            <div class="cnw_col">
                {% if  settings_fields.location.keyword_search.enabled %}
                    <div class="cnw_form-group cnw_zoek-waar">
                        <label for="cnw_zoek-waar">
                            {{  settings_fields.location.keyword_search.label }}
                        </label>
                        <input type="text" class="cnw_form-control" placeholder="{{  settings_fields.location.keyword_search.placeholder }}">
                    </div>
                {% endif %}

                {% if settings_fields.location.group_filters.enabled %}
                    {% for key, filter in  settings_fields.location.group_filters.filters %}
                        {% include 'widgets/search-form-widget/group-filter-' ~ filter.type ~  '.html.twig' with {'label':filter.label, 'placeholder':filter.placeholder, 'options':filter.options, 'default_option': defaults.location.group_filters[key]} %}
                    {% endfor %}
                {% endif %}
            </div>
        {% endif %}

        {% if settings_fields.time.date_search.enabled or settings_fields.time.date_search.group_filters.enabled %}
            <div class="cnw_col">
                {%  if  settings_fields.time.date_search.enabled %}
                    <div class="cnw_form-group cnw_zoek-wanneer">
                        <label for="cnw_zoek_wanneer">
                            {{  settings_fields.time.date_search.label }}
                        </label>
                        <select class="cnw_form-control">
                            {% if settings_fields.time.date_search.placeholder %}
                                <option>{{ settings_fields.time.date_search.placeholder }}</option>
                            {% endif %}
                            {% if settings_fields.time.date_search.options.today %}
                            <option value="today"{% if defaults.current_date == 'today' %} selected{% endif %} }}>Vandaag</option>
                            {% endif %}
                            {% if settings_fields.time.date_search.options.tomorrow %}
                            <option value="tomorrow"{% if defaults.current_date == 'tomorrow' %} selected{% endif %}>Morgen</option>
                            {% endif %}
                            {% if settings_fields.time.date_search.options.weekend %}
                            <option value="weekend"{% if defaults.current_date == 'weekend' %} selected{% endif %}>Dit weekend</option>
                            {% endif %}
                            {% if settings_fields.time.date_search.options.days_7 %}
                            <option value="days_7"{% if defaults.current_date == 'days_7' %} selected{% endif %}>Binnen 7 dagen</option>
                            {% endif %}
                            {% if settings_fields.time.date_search.options.days_14 %}
                            <option value="days_14"{% if defaults.current_date == 'days_14' %} selected{% endif %}>Binnen 14 dagen</option>
                            {% endif %}
                            {% if settings_fields.time.date_search.options.days_30 %}
                            <option value="days_30"{% if defaults.current_date == 'days_30' %} selected{% endif %}>Binnen 30 dagen</option>
                            {% endif %}
                            {% if settings_fields.time.date_search.options.custom_date %}
                            <option value="custom_date"{% if defaults.current_date == 'custom_date' %} selected{% endif %}>Aangepaste datum</option>
                            {% endif %}
                        </select>

                        {% if settings_fields.time.date_search.options.custom_date %}
                            <div class="cnw_zoek-custom-date"{% if defaults.current_date != 'custom_date' %} style="display: none;" {% endif %}>
                                <input type="text" class="cnw_form-control" />
                                <input type="text" class="cnw_form-control" />
                            </div>
                        {% endif %}

                    </div>
                {% endif %}

                {% if settings_fields.time.group_filters.enabled %}
                    {% for key, filter in  settings_fields.time.group_filters.filters %}
                        {% include 'widgets/search-form-widget/group-filter-' ~ filter.type ~  '.html.twig' with {'label': filter.label, 'placeholder': filter.placeholder, 'options': filter.options, 'default_option': defaults.time.group_filters[key]} %}
                    {% endfor %}
                {% endif %}
            </div>
        {% endif %}


        {% if  settings_fields.extra.group_filters.enabled %}
            <div class="cnw_col">
                {% for key, filter in  settings_fields.extra.group_filters.filters %}
                    {% include 'widgets/search-form-widget/group-filter-' ~ filter.type ~  '.html.twig' with {'label':filter.label, 'placeholder':filter.placeholder, 'options':filter.options, 'default_option': defaults.extra.group_filters[key]} %}
                {% endfor %}
            </div>
            {% endif %}


    </div>


    <div class="cnw_row">
        <div class="cnw_col cnw_btn-search--holder">
            <button type="submit" class="cnw_btn cnw_btn-search">{{ settings_general.button_label }}</button>
        </div>
    </div>
</form>

{% if settings_footer.body %}
    <div class="cnw_form_footer">
        {{ settings_footer.body | raw }}
    </div>
{% endif %}
