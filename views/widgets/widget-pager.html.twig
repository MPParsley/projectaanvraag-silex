{% if pager and pager.pageCount > 1 %}
    <nav aria-label="Page navigation example">
        <ul class="cnw_pagination cnw_justify-content-center">

            {% if pager.activePageIndex != 0 %}
                <li class="cnw_page-item ">
                    <a class="cnw_page-link" href="#" tabindex="-1" onclick="CultuurnetWidgets.switchPage(0)">Eerste</a>
                </li>
                <li class="cnw_page-item">
                    <a class="cnw_page-link" href="#" tabindex="-1" onclick="CultuurnetWidgets.switchPage({{ pager.activePageIndex - 1 }})">Vorige</a>
                </li>
            {% endif %}

            {% if pager.getLowestVisible != 1 %}
                <li class="pager-ellipsis disabled"><span>…</span></li>
            {% endif %}

            {% for i in pager.getLowestVisible..pager.getHighestVisible %}
                <li class="cnw_page-item {% if i == pager.activePageIndex + 1 %}cnw_disabled{% endif %}">
                    <a class="cnw_page-link" href="#" onclick="CultuurnetWidgets.switchPage({{ i-1 }})">{{ i }}</a>
                </li>
            {% endfor %}

            {% if pager.getHighestVisible != pager.pageCount %}
                <li class="pager-ellipsis disabled"><span>…</span></li>
            {% endif %}

            {% if pager.activePageIndex != pager.pageCount-1 %}
                <li class="cnw_page-item">
                    <a class="cnw_page-link" href="#" onclick="CultuurnetWidgets.switchPage({{ pager.activePageIndex + 1 }})">Volgende</a>
                </li>
                <li class="cnw_page-item">
                    <a class="cnw_page-link" href="#" onclick="CultuurnetWidgets.switchPage({{ pager.pageCount - 1 }})">Laatste</a>
                </li>
            {% endif %}
        </ul>
    </nav>
{% endif %}