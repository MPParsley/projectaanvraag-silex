{
    "name": "cultuurnet/projectaanvraag-silex",
    "description": "A silex application that serves as API backend for the projectaanvraag application",
    "license": "GPL-3.0",
    "require": {
        "silex/silex": "~2.0",
        "deralex/yaml-config-service-provider": "^1.0",
        "cweagans/composer-patches": "^1.5"
    },
    "extra": {
        "patches": {
            "deralex/yaml-config-service-provider": {
                "Add support for silex 2": "patches/yaml-config-service-provider-2.patch"
            }
        }
    },
    "autoload": {
        "psr-4": {
            "CultuurNet\\ProjectAanvraag\\": ["src", "app"]
        }
    },
    "require-dev": {
        "phing/phing": "^2.15",
        "phpunit/phpunit": "^4.8",
        "squizlabs/php_codesniffer": "^2.7",
        "satooshi/php-coveralls": "^1.0",
        "escapestudios/symfony2-coding-standard": "^2.9"
    }
}
